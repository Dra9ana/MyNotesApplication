# Passwords section

import tkinter as tk

# Defining a class for the Passwords section
class Passwords:
     def __init__(self, website, additional_info, username, mail, password):
                  self.website         = website;
                  self.additional_info = additional_info;
                  self.username        = username;
                  self.mail            = mail;
                  self.password        = password;
                  
# Main programme

def read_input():

# Reading information from the input
    website         = input1.get()
    additional_info = input2.get()
    username        = input3.get()
    mail            = input4.get()
    password        = input5.get()
    
    # Storing data in a Database
    New_Notes('Passwords', [website, additional_info, username, mail, password])

    
# Creating graphics
  # Creating a New window
    new_master = tk.Toplevel(master)
    
  # Labelling Important Points
    tk.Label(new_master, text="Website:"+website).grid(row=1)
    tk.Label(new_master, text="Additional info:"+additional_info).grid(row=2)
    tk.Label(new_master, text="Username:"+username).grid(row=3)
    tk.Label(new_master, text="Mail:"+mail).grid(row=4)
    tk.Label(new_master, text="Password:"+password).grid(row=5)
 
    new_master.mainloop()
                  

# Creating master
master = tk.Tk()


# Making three labels for description of Passwords section
tk.Label(master, text="Passwords notes:").grid(row=0)
tk.Label(master, text="Website:").grid(row=1)
tk.Label(master, text="Additional info:").grid(row=2)
tk.Label(master, text="Username:").grid(row=3)
tk.Label(master, text="Mail:").grid(row=4)
tk.Label(master, text="Password:").grid(row=5)

# Making input boxes
input1 = tk.Entry(master)
input2 = tk.Entry(master)
input3 = tk.Entry(master)
input4 = tk.Entry(master)
input5 = tk.Entry(master)

# Setting position of a box
input1.grid(row=1, column=1)
input2.grid(row=2, column=1)
input3.grid(row=3, column=1)
input4.grid(row=4, column=1)
input5.grid(row=5, column=1)

# Making buttons and setting actions
tk.Button(master, text='Quit', command=master.quit).grid(row=7, column=1, sticky=tk.W,pady=4)
tk.Button(master, text='Done', command=read_input).grid(row=7, column=2, sticky=tk.W, pady=4)


master.mainloop()
