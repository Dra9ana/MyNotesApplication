import tkinter as tk

# Defining class for a Travel section
class Travel:
     def __init__(self, start_time, end_time, duration):
                  self.start_time = start;
                  self.end_time   = end_time;
                  self.days_off   = duration;
                  
# Main programme

def read_input():

# Reading information from the input
    begin_time   = input1.get()
    end_time     = input2.get()
    duration = input3.get()
    
# Opening/Closing a file and updating it
    input_file = open("travel_input.txt","w");
    input_file. write(begin_time+" "+end_time+" "+duration);
    input_file.close()
    
#Creating graphics
  # Creating a New window
    new_master = tk.Toplevel(master)
    
  #Labelling Important Points
    tk.Label(new_master, text="Beginning time:"+begin_time).grid(row=0)
    tk.Label(new_master, text="Ending time:"+end_time).grid(row=1)
    tk.Label(new_master, text="Number of days left:"+duration).grid(row=2)
    new_master.mainloop()
                  


#creates master
master = tk.Tk()


# Making three labels for description of Travel section
tk.Label(master, text="Beginning time:").grid(row=0)
tk.Label(master, text="Ending time:").grid(row=1)
tk.Label(master, text="Number of days left:").grid(row=2)

# making input boxes
input1 = tk.Entry(master)
input2 = tk.Entry(master)
input3 = tk.Entry(master)

#setting position of a box
input1.grid(row=0, column=1)
input2.grid(row=1, column=1)
input3.grid(row=2, column=1)

#making buttons and setting actions
tk.Button(master, text='Quit', command=master.quit).grid(row=3, column=1, sticky=tk.W,pady=4)
tk.Button(master, text='Done', command=read_input).grid(row=3, column=2, sticky=tk.W, pady=4)


master.mainloop()






